@page "/"
@model Proiect3._0.Pages.Spectacole.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: #e6e6fa;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spectacol[0].Titlu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spectacol[0].Regizor.NumeRegizor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spectacol[0].DataSpectacol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spectacol[0].Locatia.DenumireLocatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spectacol[0].Tip.DenumireTip)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Spectacol) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titlu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Regizor.NumeRegizor)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataSpectacol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Locatia.DenumireLocatie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tip.DenumireTip)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
